{
    "name": "GPT-Prompter",
    "version": "0.0.0.1",
    "description": "Fast custom prompts to GPT-3 API",
    "manifest_version": 3,
    "icons": { "16": "icons/iconA16.png",
           "48": "icons/iconA48.png",
          "128": "icons/iconA128.png" },
    "permissions": ["contextMenus","storage","notifications"],
    "content_scripts": [
        {   "matches": ["https://*/*", "http://*/*"],
            "js":["node_modules/@webcomponents/custom-elements/custom-elements.min.js",
                  "content.js",
                  "highlight.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "GPT-Prompter"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}
