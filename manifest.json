{
    "name": "GPT-Xplainer",
    "version": "0.1",
    "description": "Find answers to your questions",
    "manifest_version": 3,
    "permissions": ["contextMenus","storage"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js":["content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "GPT-Xplainer"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}